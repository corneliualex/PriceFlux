@model PriceFlux.Models.User
@{
    ViewBag.Title = "Register";
}

<legend>Register</legend>
@using (Html.BeginForm("UserForm", "Account"))
{

    <div class="form-group">
        @Html.LabelFor(u => u.Username)
        @Html.TextBoxFor(u => u.Username, new { @class = "form-control", @placeholder = "Enter user name" })
        @Html.ValidationMessageFor(u => u.Username)
    </div>
    <div class="form-group">
        @Html.LabelFor(u => u.Password)
        @Html.TextBoxFor(u => u.Password, new { @class = "form-control", @placeholder = "Password", @type = "password" })
        @Html.ValidationMessageFor(u => u.Password)
    </div>
    @Html.HiddenFor(u => u.Id)
    <button type="submit" class="btn btn-primary">Submit</button>


}